<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewName"
            android:textSize="20sp" android:layout_marginEnd="137dp" android:layout_marginRight="137dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewId"
            android:layout_marginTop="16dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewUsername"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewUsername"
            android:textSize="20sp" android:layout_marginEnd="137dp" android:layout_marginRight="137dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewName"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/textViewEmail"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewEmail"
            android:textSize="20sp" android:layout_marginEnd="137dp" android:layout_marginRight="137dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewUsername" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewPhone"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewPhone"
            android:textSize="20sp" android:layout_marginEnd="137dp" android:layout_marginRight="137dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmail" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewWebsite"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewId"
            android:textSize="20sp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/btn" android:layout_marginEnd="137dp"
            android:layout_marginRight="137dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="136dp"
            android:layout_marginStart="136dp" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewName"/>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        style="@android:style/Widget.ProgressBar.Horizontal"/>
    <Button android:id="@+id/btn"
            android:layout_width="231dp"
            android:layout_height="49dp"
            android:textSize="25sp"
            android:text="Mostrar datos"
            android:onClick="startService" android:textColor="#E6E6E6"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="65dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp" android:layout_marginStart="92dp" android:layout_marginEnd="92dp"
            android:layout_marginRight="92dp" app:layout_constraintEnd_toEndOf="parent"
            android:background="#3F51B5" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewId"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewWebsite"
            android:textSize="20sp" android:layout_marginEnd="137dp" android:layout_marginRight="137dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="136dp" android:layout_marginStart="136dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewPhone"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>